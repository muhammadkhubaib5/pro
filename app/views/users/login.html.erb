<div class="form-group">
	<%= form_for @user, url: {controller: 'users', action: 'process_login', method: 'post'} do |f|%>

		<div class='form-group has-error'>
			<% if flash[:notice].present? %>
			<p class='control-label'><%= flash[:notice] %></p>
			<% end %>
		</div >
		<div class="container">
			<div class='row'>
				<div class='col-lg-12'>
					<h2>Login</h2>
				</div>
			</div>
			<div class='row'>
				<div class='col-xs-12'>
					<div class='row'>
				<div class='col-sm-3'>
					<div class='control' id='login'>
						<%= f.label :username, "Username", class: 'form'%>
						<%= f.text_field :username, class: "form-control"%><br>

						<%= f.label :password, "Password"%>
						<%= f.password_field :password, class: "form-control"%><br><br>
						<%= f.submit 'Login', class: 'btn btn-primary'%>
					</div>
							</div>
					</div>
				</div>
			</div>
		</div>
	<%end%>
</div>